<div class="container mt-5 col-6 offset-3">
  <h1>Add a Cocktail</h1>
  <%= simple_form_for([@dose, @cocktail]) do |f| %>
    <%= f.input :name%>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>

    <%= f.submit 'Add', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to "home", cocktails_path %>
</div>
